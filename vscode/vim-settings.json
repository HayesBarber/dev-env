{
  "editor.lineNumbers": "relative",
  "vim.leader": "<Space>",
  "vim.hlsearch": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["leader", "v"], "commands": [":vsplit"] },
    { "before": ["<C-d>"], "after": ["<C-d>", "z", "z"] },
    { "before": ["<C-u>"], "after": ["<C-u>", "z", "z"] },
    { "before": ["leader", "c", "p"], "commands": ["copyFilePath"] },
    { "before": ["leader", "c", "r"], "commands": ["copyRelativeFilePath"] },
    {
      "before": ["leader", "h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["leader", "j"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["leader", "k"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["leader", "l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    {
      "before": ["leader", "o"],
      "commands": ["workbench.action.moveEditorToNextGroup"]
    },
    {
      "before": ["leader", "i"],
      "commands": ["workbench.action.moveEditorToPreviousGroup"]
    },
    { "before": ["leader", "w"], "commands": [":w!"] },
    { "before": ["leader", "q"], "commands": [":q!"] },
    { "before": ["leader", "x"], "commands": [":x!"] },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    { "before": ["leader", "p"], "commands": ["editor.action.formatDocument"] },
    {
      "before": ["leader", "a"],
      "commands": ["workbench.action.closeEditorsInGroup"]
    },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["leader", "-"],
      "commands": ["workbench.action.navigateBack"]
    },
    {
      "before": ["leader", "="],
      "commands": ["workbench.action.navigateForward"]
    }
  ],
  "vim.visualModeKeyBindings": [
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },
    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
    { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] }
  ]
}
